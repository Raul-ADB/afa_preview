---
import '@fontsource-variable/montserrat';
import '@/styles/fonts.css';
import { ClientRouter } from 'astro:transitions';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';

const { pageTitle = ''} = Astro.props;

interface Props {
	pageTitle?: string;
}

const currentLang = Astro.currentLocale || 'es';
---

<html lang={currentLang}>
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="https://res.cloudinary.com/dhojdq7qf/image/upload/v1744661100/Favicon_vnmzql.png" />
		<meta name="generator" content={Astro.generator} />
		<title>AFA | {pageTitle}</title>
    <meta name="description" content="Established in 2024, AFA is a multidisciplinary studio that blends experimental design with ancestral knowledge. -the firm includes an architectural division, interior design studio and an artistic direction wing to approach project development" />
    <meta name="keywords" content="afa, arquitecture, photography, arquitectura, fotografía" />
    <meta name="author" content="Alonso Fernández Amador" />
		<ClientRouter/>
	</head>
	<body class="body">
		<Navbar pageTitle={pageTitle} currentLang={currentLang} />
			<slot />
		<Footer pageTitle={pageTitle} currentLang={currentLang} />
	</body>
</html>

<script>
  import PhotoSwipeLightbox from 'photoswipe/lightbox';
  import 'photoswipe/style.css';
  
  const lightbox = new PhotoSwipeLightbox({
    gallery: '#idGallery',
    children: 'a',
    pswpModule: () => import('photoswipe'),
  });
  lightbox.init();
</script>

<style is:global>

  :root {
    color-scheme: normal;
  }

  /*
    * RESET *
  */

  *, ::after, ::before, ul, li {
    box-sizing: border-box;
    min-width: 0;
    padding: 0;
    margin: 0;
  }

  html {
    font-size: 62.5%;
    font-family: 'Gotham-Light', 'Montserrat Variable', sans-serif;
  }

  body {
    font-size: 1.6rem;
    font-weight: 200;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  input {
    -webkit-appearance: none;
    -moz-appearance: none;
    border-radius: none;
  }
  /*
    * GENERALES *
  */

  h1, h2, h3, h4 {
    margin: 0;
    padding: 0;
    text-wrap: balance;
    font-family: 'Gotham';
    font-weight: 400;
  }

  p {
    text-wrap: pretty;
  }

  ul {
    list-style: none;
  }

  a {
    color: #000;
    text-decoration: none;
  }

  a:visited {
    color: #000;
  }

  .container {
    width: 92%;
    max-width: 144rem;
    margin: 0 auto;
    position: relative;
  }

  .mb {
    margin-bottom: 5rem;
  }

  @media (width >= 768px) {
    .mb {
      margin-bottom: 20rem;
    }
    
  }

  .bold {
    font-weight: 400;
  }

  .mta {
    margin-top: auto;
  }

</style>