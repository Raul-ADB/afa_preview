---
import { getRelativeLocaleUrl } from 'astro:i18n';
import Layout from '@/layouts/Layout.astro';
import HeroGallery from '@/components/HeroGallery.astro';
import type { HeroOptionsInterface } from '@/types/types';

interface Options extends HeroOptionsInterface {};

const hero = 'https://res.cloudinary.com/dhojdq7qf/image/upload/v1743112055/portadaAP_cfzkxx.jpg';
const heroAlt = 'Image AFA Photography';
const legend = '';
const options:Options[] =  [
  {
    name: 'Shot on iPhone',
    url: '/photography/mobile'
  },
  {
    name: 'Film',
    url: '/photography/film'
  },
];
---

<Layout pageTitle='Photography'>
  <HeroGallery origin='' hero={hero} heroAlt={heroAlt} legend={legend} options={options}/>
</Layout>