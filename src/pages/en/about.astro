<style>
  .mb {
    margin-bottom: 5rem;
  }

  .main {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media (width >= 768px) {
    .main {
      margin-top: 10rem;
      padding-inline: 6rem 4.4rem;
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
      min-height: 60rem;
      height:  calc(100vh - 16rem);
      max-height: 75rem;
      overflow-y: scroll;
      margin-bottom: none;
    }
  }

  /* about */

  .about__image {
    filter: grayscale(100%);
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: start;
  }
  
  @media (width >= 768px) {
    .about__image {
      justify-content: flex-start;
      width: 50%;
      position: sticky;
      top: 0;
      margin-bottom: 0;
    }
  }

  .about__picture {
    width: 100%;
    height: 100%;
  }

  @media (width >= 768px) {
    .about__picture {
      width: 55rem;
    }
  }

  .about__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .about__text {
    font-size: 1.6rem;
    display: flex;
    flex-direction: column;
    gap: 0;    
  }
  
  @media (width >= 768px) {
    .about__text {
      width: 50%;
      padding-left: 2rem;

      p {
      text-align: justify;
    }
    }
  }

  .bio {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
</style>