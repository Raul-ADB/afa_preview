---

import Layout from '@/layouts/Layout.astro';
import Randomize from '@/components/Randomize.astro';
import { languageList } from "@/i18n/ui";
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslation } from '@/utils/utils';
import ScreenGallery from '@/components/ScreenGallery.vue';
import RandomHome from '@/layouts/RandomHome.vue';

const currentLang = Astro.currentLocale || 'es';
const translateUI = useTranslation(currentLang as keyof typeof languageList);

---

<Layout pageTitle='Home'>
  <RandomHome client:load/>
  <section class="home__cta">
    <a href={getRelativeLocaleUrl(currentLang, "/home")}>Ver m√°s</a>
  </section>
</Layout>


<style>

  .home__cta {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .home__cta a {
    display: inline-block;
    width: 25rem;
    font-size: 1.8rem;
    font-weight: 500;
    background-color: #f2f2f2;
    text-align: center;
    color: #000;
    padding: 1rem 2rem;
    border-radius: 2rem;
    text-decoration: none;
  }

  a:visited {
    color: #000;
  }

</style>