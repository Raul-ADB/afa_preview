---
import { languageList } from '@/i18n/ui';
import { getRelativeLocaleUrl } from 'astro:i18n';
import { useTranslation } from '@/utils/utils';
import '@/styles/fonts.css';

const currentLang = Astro.currentLocale || 'es';
const translateUI = useTranslation(currentLang as keyof typeof languageList);
---

<!DOCTYPE html>
<html lang={currentLang}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PÃ¡gina no encontrada</title>
</head>
<body>
    <div class="container">
        <h1>404</h1>
        <p>{translateUI("404.message")}</p>
        <a href={getRelativeLocaleUrl(currentLang, '/')}>{translateUI("404.button")}</a>
    </div>
</body>
</html>

<style>

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Gotham-Light', 'Montserrat Variable', sans-serif;
  }

  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f4f4f4;
    text-align: center;
  }

  .container {
    max-width: 500px;
    padding: 20px;
  }

  h1 {
    font-size: 6rem;
    color: #333;
  }

  p {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 20px;
  }

  a {
    display: inline-block;
    padding: 10px 20px;
    font-size: 1rem;
    color: #fff;
    background: #333;
    text-decoration: none;
    border-radius: 5px;
    transition: 0.3s;
  }

  a:hover {
      background: #555;
  }

</style>